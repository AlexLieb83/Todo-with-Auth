    <form action="/companies/createCompany" method='POST'>
        <h2>Job Details</h2>
        <label for="company">Company</label>
        <input type="text" placeholder="Company Name" id="companyname" name='companyName'>
        <br>
        <label for="dateCreated">Coffee Chat Date</label>
        <input type="date" id="datePicker dateCreated" name='DateAdded'>
        <br>
        <label for="role">Role</label>
        <input type="text" placeholder="Role" id="role" name='Role'>
        <br>
        <label for="positionType">Position Type</label>
        <input type="text" placeholder="Position Type" id="positionType" name='PositionType'>
        <br>
        <label for="source">Source</label>
        <input type="text" placeholder="Source" id="source" name='Source'>
        <br>
        <h3>Links</h3>
        <label for="urlText">URL Text</label>
        <input type="text" placeholder="URL Text" id="urlText" name='URLText'>
        <br>
        <label for="url">URL</label>
        <input type="text" placeholder="URL" id="url" name='URLLink'>

        <h3>Contact</h3>
        <label for="firstname">First Name</label>
        <input type="text" placeholder="John" id="firstname" name="FirstName">
        <br>
        <label for="lastname">Last Name</label>
        <input type="text" placeholder="Smith" id="lastname" name="LastName">
        <br>
        <label for="email">Email</label>
        <input type="email" placeholder="john@smith.com" id="email" name="Email">
        <br>
        <label for="phone">Phone</label>
        <input type="tel" placeholder="(555) 555-1234" id="phone" name="Phone">
        <br>
        <label for="notes">Notes</label>
        <input type="textarea" placeholder="Notes" id="notes" name="Notes">
        <br>
        <h3>Next Steps</h3>
        <label for="coffeechat">Coffee Chat</label>
        <input type="checkbox" id="coffeechat" name="CoffeeChat">
        <br>
        <label for="coffeeChatDate">Coffee Chat Date</label>
        <input type="date" id="datePicker coffeeChatDate" name='DateAdded'>
        <br>
        <label for="status">Status</label>
        <select name = "dropdown">
            <option value="Active" name="Active" selected>Active</option>
            <option value="Inactive" name="Inactive">Inactive</option>
         </select>
        <br>
        <label for="Applied">Applied</label>
        <input type="checkbox" name="Applied">
        <br>
        <br>
        <input type="submit">
    </form>

    <a href="/logout">Logout</a>

    <script src="js/main.js"></script>
